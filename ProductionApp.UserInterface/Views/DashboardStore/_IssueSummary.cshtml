@model ProductionApp.UserInterface.Models.IssueSummaryViewModel

<div class="col-md-12">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">@Model.Title</h3>
        </div>

        <div class="with-border @Model.Color " style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin" style="overflow-y: scroll;">
                    <thead>
                        <tr>
                            <th>Issue No.</th>
                            <th>Issued To</th>
                            <th>Issued By</th>
                            <th>Issue Date</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.MaterialIssueHeaderList != null)
                        {
                            for (int i = 0; i < Model.MaterialIssueHeaderList.Count; i++)
                            {
                                <tr>
                                    <th><a href="@Model.MaterialIssueHeaderList[i].ID">@Model.MaterialIssueHeaderList[i].IssueTo</a></th>
                                    <td>@Model.MaterialIssueHeaderList[i].IssueTo</td>
                                    <td>@Model.MaterialIssueHeaderList[i].IssuedBy</td>
                                    <td><span class="label label-info">@Model.MaterialIssueHeaderList[i].IssueDate</span></td>
                                </tr>
                            }

                            for (int i = (Model.MaterialIssueHeaderList == null ? 0 : Model.MaterialIssueHeaderList.Count); i < 5; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info">-</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info">-</span></td>
                                </tr>
                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>

        <div class="box-footer clearfix">
            <a href="@Model.URL" class="label @Model.Color">View All</a>
        </div>

    </div>
</div>
@model ProductionApp.UserInterface.Models.MaterialReceiptViewModel

<div class="col-md-12" style="height:500px">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Reorder Alert</h3>
        </div>

        <div class="with-border bg-maroon" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%;table-layout:fixed;">
                        <tr>
                            <th>Receipt No</th>
                            <th>Title</th>
                            <th>Supplier</th>
                            <th>Receipt Date</th>
                        </tr>
                    </thead>
                    @* <tbody style="display:block;overflow-y:scroll;width:100%;height:150px;">@*table-layout:auto;Need display to be changed into block*@
                    <tbody style="height:160px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.MaterialReceiptList != null)
                        {
                            for (int i = 0; i < Model.MaterialReceiptList.Count; i++)
                            {
                                <tr>
                                    <td><a href="@Model.MaterialReceiptList[i].ID">@Model.MaterialReceiptList[i].ReceiptNo</a></td>
                                    <td style="width:25%;">@Model.MaterialReceiptList[i].PurchaseOrderNo</td>
                                    <td style="width:25%;">@Model.MaterialReceiptList[i].Supplier.CompanyName</td>
                                    <td style="width:25%;"><span class="label label-info  bg-maroon">@Model.MaterialReceiptList[i].ReceiptDateFormatted</span></td>
                                </tr>
                            }

                            for (int i = (Model.MaterialReceiptList == null ? 0 : Model.MaterialReceiptList.Count); i < 5; i++)
                            {
                                <tr>
                                    <td style="width:30%;">-</td>
                                    <td style="width:30%;">-</td>
                                    <td style="width:40%;">-</td>
                                    <td style="width:40%;"><span class="label label-info  bg-maroon">-</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                    <td style="width:30%;">-</td>
                                    <td style="width:30%;">-</td>
                                    <td style="width:40%;">-</td>
                                    <td style="width:40%;"><span class="label label-info bg bg-maroon">-</span></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>


@model ProductionApp.UserInterface.Models.ReceiptSummaryViewModel

<div class="col-md-12" style="height:500px">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">@Model.Title</h3>
        </div>

        <div class="with-border @Model.Color " style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%;table-layout:fixed;">
                        <tr>
                            <th>Issue No.</th>
                            <th>Issued To</th>
                            <th>Issued By</th>
                            <th>Issue Date</th>
                        </tr>
                    </thead>
                    <tbody style="display:block;overflow-y:scroll;table-layout:auto;height:475px">
                        @if (Model.MaterialReceiptList != null)
                        {
                            for (int i = 0; i < Model.MaterialReceiptList.Count; i++)
                            {
                                <tr>
                                    <th><a href="@Model.MaterialReceiptList[i].ID">@Model.MaterialReceiptList[i].MRNNo</a></th>
                                    <td>@Model.MaterialReceiptList[i].PurchaseOrder.PurchaseOrderTitle</td>
                                    <td>@Model.MaterialReceiptList[i].Supplier.CompanyName</td>
                                    <td><span class="label label-info  @Model.Color">@Model.MaterialReceiptList[i].MRNDate</span></td>
                                </tr>
                            }

                            for (int i = (Model.MaterialReceiptList == null ? 0 : Model.MaterialReceiptList.Count); i < 10; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info  @Model.Color">-</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info bg @Model.Color">-</span></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>

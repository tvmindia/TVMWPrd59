@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.FinishedGoodStockAdjViewModel
@using ProductionApp.UserInterface.Models
@{
    ViewBag.Title = "New Finished Good Stock Adjustment";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/Select2")

}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Index", "DashboardStore", new { code = "STR" })><i class="fa fa-cogs"></i>Stores</a> </li>
        <li>Finished Goods</li>
        <li>Stock Adjustment</li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<div id="divApprovalHistory">
    @* THE DOCTYPE VARIES FOR EACH PAGE MAKE SURE TO ADD ApprovalHistory JS FROM SCRIPT BUNDLE IN THE SAME PAGE*@
    @Html.Action("AboutApprovalHistory", "DocumentApproval", new { id = Model.ID, docType = "FGADJ" })
</div>
<section class="content">
    <div class="row" id="OverlayHeader">
        <div class="col-md-6">
            <span id="lblFGStockAdjNo" class="SCHeader">Stock Adj.No#: New</span>
        </div>
        <div class="col-md-6" id="divbuttonPatchAddFGStockAdj" style="min-height:25px;">
            @{
                var data = new { actionType = "Add" };
                @Html.Action("ChangeButtonStyle", "FinishedGoodStockAdj", data);
            }
        </div>
    </div>

    <div class="row tableContainer">
        <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General</div>
        @using (Ajax.BeginForm("InsertUpdateFinishedGoodStockAdj", "FinishedGoodStockAdj", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccessFinishedGoodStockAdj", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "FinishedGoodStockAdjForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID, htmlAttributes: new { @class = "", @value = Guid.Empty })
            @Html.HiddenFor(model => model.IsUpdate, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.LatestApprovalStatus)
            @Html.HiddenFor(model => model.LatestApprovalID)

 
                <div class="form-group col-md-8">
                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.AdjustmentNo, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.AdjustmentNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @disabled = "disabled", @placeholder = "Autogenerated" } })
                            @Html.ValidationMessageFor(model => model.AdjustmentNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-12"></div>
                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.AdjustedBy, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.Action("EmployeeDropdown", "Employee")
                            @Html.ValidationMessageFor(model => model.AdjustedBy, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.AdjustmentDateFormatted, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.AdjustmentDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                            @Html.ValidationMessageFor(model => model.AdjustmentDateFormatted, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <div class="form-group col-md-12 box-header figuresummary rounded">

                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Approval Status</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblApprovalStatus">N/A</div>
                        </div>

                        <div class="form-group col-md-12">
                            <div id="divUnpostedProduct" hidden="hidden"><a href="#" class="actionLink" onclick="BindUnpostedData();" style="text-decoration:none;color:red; border-bottom:1px solid red;"><label id="txtValue" style="font-size:14px;"></label><label id="lblText" style="font-size:14px;">&nbsp;Unposted Tracking Entry Exists</label></a></div>
                        </div>
                    </div>
                </div>

          

            <div class="form-group" hidden="hidden">
                <div class="col-md-offset-2 col-md-10">
                    @Html.HiddenFor(model => model.DetailJSON, htmlAttributes: new { @class = "" })
                    <input id="btnSave" type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>


            <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> Item Details</div>
            <div class="col-md-12" style="padding-bottom:3px;padding-left:500px">

                <a class="btn btn-openid" onclick="ShowFinishedGoodStockAdjDetailsModal()" id="btnAddFinishedGoodStockAdjItems" title="Add Item" style="color:white;font-weight:bold;float:right"><i class="glyphicon glyphicon-plus"></i> Add Item </a>

            </div>

            <div class="col-md-12">
                <table id="tblFinishedGoodStockAdjDetail" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                    <thead>
                        <tr class="text-center TableHead">
                            <th>ID</th>
                            <th>Product ID</th>
                            <th>Sl.No</th>
                            <th>Product Code</th>
                            <th>Description</th>
                            <th>Unit Code</th>
                            <th>Qty</th>
                            <th>Remarks</th>
                            <th>...</th>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General Notes</div>
            <div class="col-md-6">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control HeaderBox", rows = "10", @style = "width:700px" } })
                </div>
            </div>
        }
    </div>
</section>


<div class="modal fade bs-example-modal-lg" id="finishedGoodStockAdjDetailsModal" @*tabindex="-1"*@ role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="min-width:900px !important;">
        <div class="modal-content" style="margin-top:4%;">
            <div class="modal-header" style="background-image: url('');background-repeat: repeat;height: 40px;padding: 3px;border-bottom:2px solid rgb(91, 192, 222)!important;">
                <div class="container-fluid" style="padding-right: 0px;">
                    <div class="col-md-9">
                        <div class="col-md-12 modelIcon">
                            <h3 class="modal-title" id="modelContextLabel">Add Stock Adjustment Details</h3>
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-right: 4px;">
                        <a class="close" data-dismiss="modal" aria-label="Close"><i style="font-size: 33px;" class="fa fa-times-circle" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>

            <div class="modal-body">
                <div class="container-fluid">

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.ProductID, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                            <div class="col-md-12" id="divProductDropdown">
                                @Html.Action("ProductDropdown", "Product", new { required = "" })
                            </div>
                            @Html.HiddenFor(model => model.FinishedGoodStockAdjDetail.ProductID, htmlAttributes: new { @class = "", @id = "hdnProductID" })
                    </div>
                    <div class="col-md-12 headSeperator"></div>

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.Product.Code, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FinishedGoodStockAdjDetail.Product.Code, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.Product.Description, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FinishedGoodStockAdjDetail.Product.Description, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.Product.UnitCode, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FinishedGoodStockAdjDetail.Product.UnitCode, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.Qty, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FinishedGoodStockAdjDetail.Qty, new { htmlAttributes = new { @class = "form-control", onkeypress = "return isNumberNegative(event)" } })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.FinishedGoodStockAdjDetail.Remarks, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.FinishedGoodStockAdjDetail.Remarks, new { htmlAttributes = new { @class = "form-control" }, rows = "5" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer" style="height: 50px;padding: 7px;">
                <a class="btn btn-primary" onclick="AddFinishedGoodStockAdjDetails()"><i class="glyphicon glyphicon-floppy-disk"></i> Add</a>
            </div>
        </div>
    </div>
</div>


<div class="modal fade bs-example-modal-lg" id="SendApprovalModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document" style="min-width:500px !important;">
        <div class="modal-content" style="margin-top:4%;">
            <div class="modal-header" style="background-image: url('');background-repeat: repeat;height: 40px;padding: 3px;border-bottom:2px solid rgb(91, 192, 222)!important;">
                <div class="container-fluid" style="padding-right: 0px;">
                    <div class="col-md-9">
                        <div class="col-md-12 modelIcon">
                            <h3 class="modal-title" id="modelContextLabel">Send Approval Details</h3>
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-right: 4px;">
                        <a class="close" data-dismiss="modal" aria-label="Close"><i style="font-size: 33px;" class="fa fa-times-circle" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    @{
                        DocumentApprovalViewModel documentApprovalVM = new DocumentApprovalViewModel();
                        documentApprovalVM.DocumentType = "FGADJ";
                        @Html.Action("GetApprovers", "DocumentApproval", documentApprovalVM);
                    }
                </div>
            </div>
            <div class="modal-footer" style="height: 50px;padding: 7px;">
                <a class="btn btn-primary" onclick="SendForApproval('FGADJ')"><i class="glyphicon glyphicon-floppy-disk"></i> Send For Approval</a>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="UnpostedProductDetailModel" @*tabindex="-1"*@ role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document" style="min-width:1000px !important;">
        <div class="modal-content" style="margin-top:4%;">
            <div class="modal-header" style="background-image: url('');background-repeat: repeat;height: 40px;padding: 3px;border-bottom:2px solid rgb(91, 192, 222)!important;">
                <div class="container-fluid" style="padding-right: 0px;">
                    <div class="col-md-9">
                        <h3 class="modal-title" id="modelContextLabel">Unposted Product Details</h3>
                    </div>
                    <div class="col-md-3" style="padding-right: 4px;">
                        <a class="close" data-dismiss="modal" aria-label="Close"><i style="font-size: 33px;" class="fa fa-times-circle" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="form-group col-md-12"></div>

                    <div class="container-fluid">
                        <table id="tblDetailUnpostedProduct" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr class="text-center">
                                    <th>Entry Date</th>
                                    <th>Product</th>
                                    <th>Sub Component / Output</th>
                                    <th>Accepted Quantity</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jsZip")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatableButtons")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/select2")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/UserJs/DocumentApproval/ApprovalHistory")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/UserJs/FinishedGoodStockAdj/NewFinishedGoodStockAdj")


}
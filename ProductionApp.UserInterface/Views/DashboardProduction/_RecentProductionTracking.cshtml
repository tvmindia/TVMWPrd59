@model ProductionApp.UserInterface.Models.ProductionTrackingViewModel

<div class="col-md-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Production Tracking</h3>
        </div>

        <div class="with-border bg-orange" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%; ">
                        <tr>
                            <th>Date</th>
                            <th>Output</th>                            
                            <th>Acc. Qty</th>
                            <th>Dam. Qty</th>                           
                        </tr>
                    </thead>
                    <tbody style="height:400px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.ProductionTrackingList != null)
                        {
                            for (int i = 0; i < Model.ProductionTrackingList.Count; i++)
                            {
                                <tr>
                                    <td><a href="/ProductionTracking/NewProductionTracking?code=PROD&id=@Model.ProductionTrackingList[i].ID">@Model.ProductionTrackingList[i].EntryDateFormatted</a></td>
                                    <td>@Model.ProductionTrackingList[i].OutputComponent.Name</td>
                                    <td>@Model.ProductionTrackingList[i].AcceptedQty</td> 
                                    <td>@Model.ProductionTrackingList[i].DamagedQty</td>                                    
                                </tr>
                            }

                            for (int i = (Model.ProductionTrackingList == null ? 0 : Model.ProductionTrackingList.Count); i < 10; i++)
                            {
                                <tr>
                                    <td>-</td>
                                    <td  >-</td>
                                    <td>-</td>
                                    <td>-</td>                                    
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>                                    
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="box-footer clearfix">

        <a href="@Model.BaseURL" class="label bg-orange">View All</a>


    </div>


</div>
@model ProductionApp.UserInterface.Models.PurchaseOrderViewModel

<div class="col-md-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Purchase Orders</h3>
        </div>

         <div class="with-border bg-orange" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%; ">
                        <tr>
                            <th>PO No.</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Issue Date</th>
                            <th>Approval Status</th>
                        </tr>
                    </thead>
                    <tbody style="height:400px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.PurchaseOrderList != null)
                        {
                            for (int i = 0; i < Model.PurchaseOrderList.Count; i++)
                            {
                                <tr>
                                    <td><a href="/PurchaseOrder/NewPurchaseOrder?code=PURCH&id=@Model.PurchaseOrderList[i].ID">@Model.PurchaseOrderList[i].PurchaseOrderNo</a></td>
                                    <td style="width:25%">@Model.PurchaseOrderList[i].PurchaseOrderDateFormatted</td>
                                    <td><span class="label label-info bg-orange ">@Model.PurchaseOrderList[i].PurchaseOrderStatus</span></td>
                                    <td  style="width:25%">@Model.PurchaseOrderList[i].PurchaseOrderIssuedDateFormatted</td>
                                    <td>@Model.PurchaseOrderList[i].ApprovalStatus</td>
                                </tr>
                            }

                            for (int i = (Model.PurchaseOrderList == null ? 0 : Model.PurchaseOrderList.Count); i < 10; i++)
                            {
                                <tr>
                                    <td>-</td>
                                    <td style="width:25%">-</td>
                                    <td><span class="label label-info bg-orange ">-</span></td>
                                    <td style="width:25%">-</td>
                                    <td>-</td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>
                                    <td>-</td>
                                    <td style="width:25%">-</td>
                                    <td><span class="label label-info bg-orange ">-</span></td>
                                    <td style="width:25%">-</td>
                                    <td>-</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="box-footer clearfix">

        <a href="@Model.BaseURL" class="label bg-orange">View All</a>


    </div>


</div>
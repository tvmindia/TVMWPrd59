@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.CustomerViewModel
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Customer",new { code=ViewBag.SysModuleCode })"><i class="fa fa-cogs"></i> Masters</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>

<section class="content">
    <div class="row">
        <div class="" id="" style="min-height:25px">

            @{
                var data = new { actionType = "List" };
                @Html.Action("ChangeButtonStyle", "Customer", data);
            }
        </div>
    </div>
    <div class="row summaryboxes">

        <div class="clearfix visible-sm-block"></div>

    </div>
    <div class="row">
        &nbsp;
    </div>

    <div class="row tableContainer">
        <div class="form-group col-md-6">
            <div class="col-md-12">
                @Html.LabelFor(model => model.CustomerAdvanceSearch.SearchTerm, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-12">
                <div class="input-group">
                    @Html.EditorFor(model => model.CustomerAdvanceSearch.SearchTerm, new { htmlAttributes = new { @class = "form-control" } })

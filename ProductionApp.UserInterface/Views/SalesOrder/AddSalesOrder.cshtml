                            <th>Product</th>
                            <th>Qty</th>
                            <th>Rate</th>
                            <th>Disc Amt</th>
                            <th>Taxable Amt</th>
                            <th>GST %</th>
                            <th>GST Amt</th>
                            <th>Net Amt</th>
                            <th>...</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <table class="table table-striped table-bordered table-hover customgrd dataTable no-footer">
                    <tbody>
                        <tr>
                            <td style="text-align: right" width="50%">
                                @Html.Label("Total Taxable Amount", htmlAttributes: new { @class = "control-label " })
                            </td>
                            <td style="text-align: right">
                                @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblTaxableAmount" })
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right">
                                @Html.Label("Total GST", htmlAttributes: new { @class = "control-label " })
                            </td>
                            <td style="text-align: right">
                                @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblTotalGST" })
                        </tr>
                        <tr>
                            <td style="text-align: right">
                                @Html.Label("Grand Total", htmlAttributes: new { @class = "control-label " })
                            </td>
                            <td style="text-align: right">
                                @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblGrandTotal", style = "font-weight: bold !important;" })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General Notes</div>
            <div class="col-md-12">
                <div class="form-group col-md-8">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control HeaderBox textareafix", rows = "8" })
                    </div>
                </div>
            </div>
            <div>
                @Html.Partial("_Fileupload")
            </div>
            <div class="col-md-12  ">&nbsp;</div>
            <div class="col-md-12  ">&nbsp;</div>
        }
    </div>
</section>


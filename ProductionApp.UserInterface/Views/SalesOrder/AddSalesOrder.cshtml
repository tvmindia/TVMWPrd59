                            @Html.LabelFor(model => model.BillingAddress, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.BillingAddress, new { @class = "form-control HeaderBox textareafix", rows = "5" })

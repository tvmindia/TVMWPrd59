@model ProductionApp.UserInterface.Models.PurchaseOrderViewModel
@Html.DropDownList("PurchaseOrderID", Model.SelectList, "---Select PurchaseOrder NO---", new { @class = "form-control", @style = "width:100%" })

<script>
    $(document).ready(function () {
        try{
            $("#PurchaseOrderID").select2({});
            $('#PurchaseOrderID').val($('#hdnPurchaseOrderID').val()).select2();
            try{
                PurchaseOrderOnChange()
            } catch (ex) {
                console.log(ex.message)
            }
        }
        catch (ex) {
            console.log(ex.message)
        }
    });
</script>
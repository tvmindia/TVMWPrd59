@model ProductionApp.UserInterface.Models.PurchaseOrderMailPreviewViewModel

<div id="mailcontainerDiv">

    <div style="max-width: 1100px; font-size: 16px; line-height: 24px; font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; color: #555; margin: auto; padding: 30px; border: 3px solid #adadad;">
        <table cellpadding="0" cellspacing="0" style="width: 100%; line-height: inherit; text-align: left;border-bottom-color:#0094ff!important;border-bottom:thin solid">
            <tr class="top">
                <td style="width:400px;vertical-align: top;  " valign="top"><img src="@ViewBag.path" style="width:100px!important;workAround:image"></td>
                <td colspan="2" style="vertical-align: top;  text-align:right" valign="top">
                    <table style="width: 100%; line-height: inherit; text-align: left;">
                        <tr><td style="text-align:right;"><span style="font-size:25px">Purchase Order</span></td></tr>
                    </table>
                </td>
            </tr>
        </table>

        <table style="width:100%;line-height:20px;margin-top:5px">
            <tr style="width:100%;">
                <td style="width:70%;"></td>
                <td style="width:30%;text-align:right">
                    <table style="width:100%;font-size:12px">
                        <tr style="width:100%"><td style="text-align:left;">PO Number  </td><td>:</td><td style="text-align:right;padding-left:5px">@Model.PurchaseOrder.PurchaseOrderNo</td></tr>
                        <tr style="width:100%"><td style="text-align:left;">PO Date   </td><td>:</td><td style="text-align:right;padding-left:5px">@Model.PurchaseOrder.PurchaseOrderDateFormatted  </td></tr>
                    </table>
                    <span style="text-align:left;"></span><br />
                    <span style="text-align:left;"></span>
                </td>

            </tr>
        </table>
        <br />
        @{ decimal itemTotal = 0, CGSTTotal = 0, SGSTTotal = 0, grossAmt = 0, total = 0;}
        <table>
            <tr style="width:100%;">
                <td><b>From</b></td>
                <td></td>
                <td><b>To</b></td>
            </tr>
            <tr style="width:100%;">
                <td style="width:400px;text-align:left;font-size:14px;vertical-align:top;">

                    @Model.PurchaseOrder.CompanyName<br />
                    @Model.PurchaseOrder.CompanyAddress<br />
                </td>
                <td style="width:200px;"></td>
                <td style="width:400px;text-align:left;font-size:14px;vertical-align:top;">

                    @Model.PurchaseOrder.Supplier<br />
                    @Model.PurchaseOrder.MailingAddress<br />
                    @Model.PurchaseOrder.ShippingAddress<br />
                </td>
            </tr>

        </table>
        

        <br />

        <table>
            <tr>
                <td style="font-size:15px"><b>Sub</b><br />Supplier Purchase Order</td>
            </tr>
        </table>

        <br />

        <table>
            <tr>
                @if (@Model.Flag)
            {
                    @Html.LabelFor(model => model.PurchaseOrder.MailBodyHeader, htmlAttributes: new { @class = "control-label ", @style = "font-weight: bold;font-size:15px", @id = "lblheader" })
                    @Html.EditorFor(model => model.PurchaseOrder.MailBodyHeader, new { htmlAttributes = new { @class = "form-control HeaderBox", @rows = 5, @style = "font-size:14px;" } })
                }
                else
                {
                    <td style="font-size:15px;">@Html.Raw(@Model.PurchaseOrder.MailBodyHeader)</td>
                }
            </tr>
        </table>
        <br />
        <table id="ItemDetailsTable" style="font-family: arial, sans-serif; border-collapse: collapse; width: 100%; line-height: inherit; text-align: left;" cellspacing="0" width="100%">
            <thead>
                <tr style="border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">
                    <th style="text-align: center;padding: 8px;font-size:14px; "> </th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Material Code</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Material Desc</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Unit</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Qty</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Rate</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Discount</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Taxable Amt</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">CGST</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">SGST</th>
                    <th style="text-align: center;padding: 8px;font-size:14px;">Amt</th>
                </tr>
                @if (Model.PurchaseOrder.PODDetail != null)
                {
                    int slno = 1;

                    foreach (var mp in Model.PurchaseOrder.PODDetail)
                    {
                        itemTotal = Math.Round(itemTotal + (mp.Qty * mp.Rate) - mp.Discount, 2);
                        <tr style="text-align: right;padding: 8px;border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">

                            <td style="text-align: center;padding: 8px;font-size:14px;">@slno</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.MaterialCode</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.MaterialDesc</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.UnitCode</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.Qty</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.Rate</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.Discount</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@itemTotal</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.CGSTAmt</td>
                            <td style="text-align: center;padding: 8px;font-size:14px;">@mp.SGSTAmt</td>
                            <td style="text-align: right;padding: 8px;font-size:14px;">@mp.Amount</td>

                        </tr>
                        slno = slno + 1;
                        CGSTTotal = CGSTTotal + mp.CGSTAmt;
                        SGSTTotal = SGSTTotal + mp.SGSTAmt;


                    }
                    grossAmt = Math.Round(grossAmt + itemTotal + CGSTTotal + SGSTTotal, 2);
                    total = grossAmt - Model.PurchaseOrder.Discount;
                }

            </thead>
        </table>
        <br />

        <table cellpadding="0" cellspacing="0" style="width: 100%; line-height: inherit; text-align: right;">

            <tr class="">
                <td style="vertical-align: top; padding: 5px;font-size:14px;" valign="top">
                    Item Total
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;font-size:14px;" align="right" valign="top">
                    @itemTotal
                </td>
            </tr>

            <tr class="">
                <td style="vertical-align: top; padding: 5px;font-size:14px;" valign="top">
                    CGST Total
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;font-size:14px;" align="right" valign="top">
                    @CGSTTotal
                </td>
            </tr>

            <tr class="">
                <td style="vertical-align: top; padding: 5px;font-size:14px;" valign="top">
                    SGST Total
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;font-size:14px;" align="right" valign="top">
                    @SGSTTotal
                </td>
            </tr>

            <tr class="">
                <td style="vertical-align: top; padding: 5px;font-size:14px;" valign="top">
                    Gross Amount
                </td>

                <td style="vertical-align: top; text-align: right; border-top-style: solid; border-top-width: 2px; border-top-color: #eee; font-weight: bold; padding: 5px;font-size:14px;" align="right" valign="top">
                    @grossAmt
                </td>
            </tr>
            <tr class="item">
                <td style="vertical-align: top;  padding: 5px;font-size:14px;" valign="top">
                    Cash Discount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;font-size:14px;" align="right" valign="top">
                    @Model.PurchaseOrder.Discount
                </td>
            </tr>


            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top"></td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top"></td>
            </tr>

            <tr class="total">
                <td style="vertical-align: top; padding: 5px;" valign="top"></td>

                <td style="vertical-align: top; text-align: right; border-top-style: solid; border-top-width: 2px; border-top-color: #eee; font-weight: bold; padding: 5px;font-size:15px;" align="right" valign="top">
                    Total: @total
                </td>
            </tr>

        </table>
        <table style="width: 100%; line-height: inherit; text-align: left;">

            <tr class="details">
                <td style="vertical-align: top; padding: 5px 5px 20px;font-size:15px;" valign="top">
                    @if (@Model.Flag)
                    {
                        @Html.LabelFor(model => model.PurchaseOrder.MailBodyFooter, htmlAttributes: new { @class = "control-label  ", @style = "font-weight: bold;font-size:15px", @id = "lblfooter" })
                        @Html.EditorFor(model => model.PurchaseOrder.MailBodyFooter, new { htmlAttributes = new { @class = "form-control HeaderBox", @rows = 5 } })
                    }
                    else
                    {
                        @Html.Raw(@Model.PurchaseOrder.MailBodyFooter)
                    }
                </td>
            </tr>
        </table>
    </div>


</div>

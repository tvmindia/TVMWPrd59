                            @Html.LabelFor(model => model.SupplierInvoiceDetail.MaterialCode, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SupplierInvoiceDetail.MaterialCode, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.SupplierInvoiceDetail.MaterialTypeDesc, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SupplierInvoiceDetail.MaterialTypeDesc, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.SupplierInvoiceDetail.UnitCode, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SupplierInvoiceDetail.UnitCode, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>

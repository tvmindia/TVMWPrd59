@model ProductionApp.UserInterface.Models.BankViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("BankCode", Model.SelectList, "--Select Bank--", new { @class = "form-control newinput", @required = "", @title = "The Bank is missing" })
        <span class="input-group-addon" style="cursor:pointer;color:#015E9A" onclick="AddBankMaster('OTR')"><i class="fa fa-plus-square-o"></i></span>
    </div>
}
else
{
<div class="input-group">
    @Html.DropDownList("BankCode", Model.SelectList, "--Select Bank--", new { @class = "form-control", @style = "width:100%" })
    <span class="input-group-addon" style="cursor:pointer;color:#015E9A" onclick="AddBankMaster('OTR')"><i class="fa fa-plus-square-o"></i></span>
</div>
}
@Html.ValidationMessage("BankCode", "", new { @class = "text-danger" })
<script>
    $(document).ready(function () {
        $("#BankCode").select2({
        });
    });
</script>
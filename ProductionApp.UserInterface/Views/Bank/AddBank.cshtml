                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>*@

                            <div class="form-group col-md-12">
                                @*@if (Model.ShowODLimit == true)*@
                                @*{*@
                                    <div class="col-md-12">

                                        @Html.LabelFor(model => model.ActualODLimit, htmlAttributes: new { @class = "control-label " })
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ActualODLimit, new { htmlAttributes = new { @class = "form-control HeaderBox BlockEnter", @style = "text-align: right", placeholder = "0.00", @onkeypress = "return isNumber(event)", @onfocus = "SelectAllValue(this)" } })

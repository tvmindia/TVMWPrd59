}

@section styles {
}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-cogs"></i> Bank</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<section class="content">
    <div class="row">
        <div class="" id="btnPatchAttributeSettab" style="min-height:25px">

            @{
                var data = new { ActionType = "Add" };
                @Html.Action("ChangeButtonStyle", "Bank", data);
            }
        </div>
    </div>
    <div class="row">
           
            <div class="EntryForms" style="height:550px">
                @using (Ajax.BeginForm("InsertUpdateBank", "Bank",null, new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "BankForm" }))

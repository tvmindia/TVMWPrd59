                            </div>
                            <div class="form-group col-md-12">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DisplayODLimit, htmlAttributes: new { @class = "control-label " })
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DisplayODLimit, new { htmlAttributes = new { @class = "form-control HeaderBox BlockEnter", @style = "text-align: right", placeholder = "0.00", @onkeypress = "return isNumber(event)", @onfocus = "SelectAllValue(this)" } })
                                    </div>
                                    <div class="col-md-1"></div>

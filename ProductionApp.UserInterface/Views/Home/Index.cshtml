@using ProductionApp.UserInterface.Models;
@{
    List<ProductionApp.UserInterface.Models.AMCSysModuleViewModel> sysModuleList = Model.SysModuleVMObj.SysModuleList;
}
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutPageGod.cshtml";
}
<div class="row" style="margin-top:5%;margin-left:5%;margin-right:5%">
    @{
        if (Model != null)
        {
            foreach (AMCSysModuleViewModel sysModuleLst in sysModuleList)
            {
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-blue-gradient">
                        <div class="inner">
                            <h3>⚝</h3>
                            <p>@sysModuleLst.Name</p>
                        </div>
                        <div class="icon">
                            <i class="@sysModuleLst.IconClass"></i>
                        </div>
                        <a href="@Url.Action(sysModuleLst.Action,sysModuleLst.Controller,sysModuleLst)" class="small-box-footer">Dashboard <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                   
            }

        }

    }
    </div>

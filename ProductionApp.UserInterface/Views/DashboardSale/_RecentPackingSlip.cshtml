@model ProductionApp.UserInterface.Models.PackingSlipViewModel

<div class="col-md-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Packing Slip</h3>
        </div>

        <div class="with-border bg-orange" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%; ">
                        <tr>
                            <th style="width:25%;">Slip No.</th>
                            <th style="width:25%;">Date</th>
                            <th style="width:25%;">Customer</th>
                            <th style="width:30%;">Dispatch Date</th>
                        </tr>
                    </thead>
                    <tbody style="height:400px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.PackingSlipList != null)
                        {
                            for (int i = 0; i < Model.PackingSlipList.Count; i++)
                            {
                                <tr>
                                    <td style="width:25%;"><a href="PackingSlip/ListPackingSlips?code=SALE&id=@Model.PackingSlipList[i].ID">@Model.PackingSlipList[i].SlipNo</a></td>
                                    <td style="width:25%;">@Model.PackingSlipList[i].DateFormatted</td>
                                    <td style="width:25%;">@Model.PackingSlipList[i].SalesOrder.CustomerName</td>
                                    <td style="width:20%;">@Model.PackingSlipList[i].DispatchedDateFormatted</td>
                                </tr>
                            }

                            for (int i = (Model.PackingSlipList == null ? 0 : Model.PackingSlipList.Count); i < 10; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info bg-orange ">-</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>
                                    <th>-</th>
                                    <th>-</th>
                                    <td>-</td>
                                    <td>-</td>
                                    <td><span class="label label-info bg-orange ">-</span></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="box-footer clearfix">

        <a href="@Model.BaseURL" class="label bg-orange">View All</a>


    </div>


</div>
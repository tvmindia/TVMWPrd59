@model ProductionApp.UserInterface.Models.CustomerInvoiceViewModel

<div class="col-md-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Customer Invoice</h3>
        </div>

        <div class="with-border bg-green" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%; ">
                        <tr>
                            <th style="width:25%;">Invoice No</th>
                            <th style="width:25%;">Date</th>
                            <th style="width:25%;">Customer</th>
                        </tr>
                    </thead>
                    <tbody style="height:400px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.CustomerInvoiceList != null)
                        {
                            for (int i = 0; i < Model.CustomerInvoiceList.Count; i++)
                            {
                                <tr>
                                    <td style="width:25%;"><a href="/CustomerInvoice/NewCustomerInvoice?code=ACC&id=@Model.CustomerInvoiceList[i].ID">@Model.CustomerInvoiceList[i].InvoiceNo</a></td>
                                    <td style="width:25%;"><span class="label label-info bg-green">@Model.CustomerInvoiceList[i].InvoiceDateFormatted</span></td>
                                    <td style="width:25%;">@Model.CustomerInvoiceList[i].Customer.CompanyName</td>
                                </tr>
                            }

                            for (int i = (Model.CustomerInvoiceList == null ? 0 : Model.CustomerInvoiceList.Count); i < 10; i++)
                            {
                                <tr>
                                    <td style="width:25%;">-</td>                                   
                                    <td style="width:25%;"><span class="label label-info bg-green">-</span></td>
                                    <td style="width:25%;">-</td>                                  
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>
                                    <td style="width:25%;">-</td>                                    
                                    <td style="width:25%;"><span class="label label-info bg-green">-</span></td>
                                    <td style="width:25%;">-</td>                                   
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="box-footer clearfix">

        <a href="@Model.BaseURL" class="label bg-green">View All</a>


    </div>


</div>
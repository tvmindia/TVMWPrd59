@model ProductionApp.UserInterface.Models.CustomerPaymentViewModel

<div class="col-md-12">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Customer Payment</h3>
        </div>

        <div class="with-border bg-orange" style="height:2px!important"></div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead style="display:table;width:100%; ">
                        <tr>
                            <th style="width:25%;">Entry No</th>
                            <th style="width:30%;">Date</th>
                            <th style="width:30%;">Customer</th>
                        </tr>
                    </thead>
                    <tbody style="height:400px;max-height:500px;overflow-y:scroll;display:block;width:100%;">
                        @if (Model.CustomerPaymentList != null)
                        {
                            for (int i = 0; i < Model.CustomerPaymentList.Count; i++)
                            {
                                <tr>
                                    <td style="width:25%;"><a href="/CustomerPayment/NewCustomerPayment?Code=ACC&id=@Model.CustomerPaymentList[i].ID">@Model.CustomerPaymentList[i].EntryNo</a></td>
                                    <td style="width:30%;"><span class="label label-info bg-orange ">@Model.CustomerPaymentList[i].PaymentDateFormatted</span></td>
                                    <td style="width:30%;">@Model.CustomerPaymentList[i].Customer.CompanyName</td>
                                </tr>
                            }

                            for (int i = (Model.CustomerPaymentList == null ? 0 : Model.CustomerPaymentList.Count); i < 10; i++)
                            {
                                <tr>                                  
                                    <td style="width:25%;">-</td>
                                    <td style="width:30%;"><span class="label label-info bg-orange ">-</span></td>
                                    <td style="width:30%;">-</td>
                                </tr>
                            }
                        }
                        else
                        {
                            for (int i = 0; i < 10; i++)
                            {
                                <tr>                                    
                                    <td style="width:25%;">-</td>
                                    <td style="width:30%;"><span class="label label-info bg-orange ">-</span></td>
                                    <td style="width:30%;">-</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="box-footer clearfix">

        <a href="@Model.BaseURL" class="label bg-orange">View All</a>


    </div>


</div>
@model ProductionApp.UserInterface.Models.MaterialViewModel
<div class="input-group">
    @Html.DropDownListFor(model=>model.MaterialID, Model.SelectList, "---Select Code---", new { @class = "form-control", @style = "width:100%" ,@onchange= "BindRawMaterialDetails(this.value)" })
    <span class="input-group-addon" style="cursor:pointer;color:#015E9A" onclick="AddMaterialMaster('OTR')"><i class="fa fa-plus-square-o"></i></span>
</div>
<script>
    $(document).ready(function () {
        $("#MaterialID").select2({ dropdownParent: $("#AddIssueToProductionItemModal") });
    });
</script>

                            @Html.ValidationMessageFor(model => model.SalesOrderID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.IssueToDispatchDate, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.IssueToDispatchDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                            @Html.ValidationMessageFor(model => model.IssueToDispatchDateFormatted, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.TotalPackageWeight, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.TotalPackageWeight, new { htmlAttributes = new { @class = "form-control HeaderBox Amount" } })
                            @Html.ValidationMessageFor(model => model.TotalPackageWeight, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PackingRemarks, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.PackingRemarks, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker", rows = "5" ,style="max-width:100%; min-width:100%; max-height:100%; min-height:100%;" } })
                            @Html.ValidationMessageFor(model => model.PackingRemarks, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                
                <div class="form-group col-md-4">
                    <div class="col-md-12">
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                    </div>
                    <div class="form-group col-md-12 box-header figuresummary rounded">
                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Order For:</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblCustomer">(Customer:)</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Expected Delivery Date: </div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblExpDate">xx/xx/xxxx</div>
                        </div>

                    </div>
                </div>
                </div>
                <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> Item List</div>

                    <div class="col-md-12" style="padding-bottom:3px">
                        <div class="col-md-10">
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-openid" onclick="AddPackingSlipDetail()" id="btnAddPackingSlip" style="color:white;font-weight:bold;float:right"><i class="glyphicon glyphicon-plus"></i> Load Items From Order</a>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <table id="tblPackingSlipDetail" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" style="width:100%">
                            <thead>
                                <tr class="text-center TableHead">
                                    <th>Id</th>
                                    <th>Code</th>
                                    <th>Sl.No</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Weight (KGs)</th>
                                    <th>......</th>
                            </thead>
                        </table>
                    </div>
                    <div class="col-md-12">&nbsp;</div>
                    <div class="col-md-12 figuresummary" style="margin-bottom:1%"><h4> Dispatch Section</h4></div>
                    <div class="col-md-12"></div>
                    <div class="col-md-12" id="divDespatch">
                        <div class="form-group col-md-12">
                            <div class="form-group col-md-8">
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DispatchedDateFormatted, htmlAttributes: new { @class = "control-label lblrequired" })
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.DispatchedDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                                    @Html.ValidationMessageFor(model => model.DispatchedDateFormatted, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DispatchedBy, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    @Html.DropDownListFor(model => model.DispatchedBy, Model.Employee.SelectList, "--Select Employee--", new { @class = "form-control BlockEnter", @Style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.DispatchedBy, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.VehiclePlateNo, htmlAttributes: new { @class = "control-label " })
                                </div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.VehiclePlateNo, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                    @Html.ValidationMessageFor(model => model.VehiclePlateNo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                                <div class="form-group col-md-6">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.DriverName, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.DriverName, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                        @Html.ValidationMessageFor(model => model.DriverName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-md-6">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.ReceivedDate, htmlAttributes: new { @class = "control-label " })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ReceivedDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                                        @Html.ValidationMessageFor(model => model.ReceivedDateFormatted, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group col-md-6">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.ReceivedBy, htmlAttributes: new { @class = "control-label " })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ReceivedBy, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                        @Html.ValidationMessageFor(model => model.ReceivedBy, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            
                            </div>
                            <div class="form-group col-md-4">
                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.CheckedPackageWeight, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.CheckedPackageWeight, new { htmlAttributes = new { @class = "form-control HeaderBox Amount" } })
                                        @Html.ValidationMessageFor(model => model.CheckedPackageWeight, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                

                                <div class="form-group col-md-12">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.DispatchRemarks, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.DispatchRemarks, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker", rows = "5", style = "max-width:100%; min-width:100%; max-height:100%; min-height:100%;" } })
                                        @Html.ValidationMessageFor(model => model.DispatchRemarks, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            </div>
                    </div>
            @*</div>*@
        }
        <div class="col-md-12">&nbsp;</div>
        <div class="col-md-12">&nbsp;</div>
   </div>
</section>


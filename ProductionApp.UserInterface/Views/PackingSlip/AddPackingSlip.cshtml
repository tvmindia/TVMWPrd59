@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.PackingSlipViewModel
@{
    if (Model.IsUpdate)
    {
        ViewBag.Title = "Edit Packing Slip";
    }
    else
    {
        ViewBag.Title = "New Packing Slip";
    }
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableSelect")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/Select2")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/Selectmin")
<style>
    td.details-control {
        background: url('../../Content/images/details_open.png') no-repeat center;
        cursor: pointer;
    }

    tr.shown td.details-control {
        background: url('../../Content/images/details_close.png') no-repeat center;
    }

</style>
}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("AddPackingSlip", "PackingSlip", new { Code = "SALE" })"><i class="fa fa-cogs"></i>Packing Slip</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<section class="content">
    <div class="row" id="OverlayHeader">
        <div class="col-md-5">
            <span id="lblPaySlipNo" class="SCHeader">Slip # : New</span>
        </div>
        <div class="col-md-7" id="divbuttonPatchAddPkgSlip" style="min-height:25px;">
            @{
                var data = new { actionType = "Add" };
                @Html.Action("ChangeButtonStyle", "PackingSlip", data);
            }
        </div>
    </div>
    <div class="row tableContainer">
        <div class="col-md-12 figuresummary" style="margin-top:1%;margin-bottom:1%"><h4> Packing Section</h4></div>
        <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General</div>
        <div class="col-md-12"></div>
        @using (Ajax.BeginForm("InsertUpdatePackingSlip", "PackingSlip", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccessReturnFromProduction", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "AddPackingSlipForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IsUpdate, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.ID, htmlAttributes: new { @class = "", @value = Guid.Empty })
            @Html.HiddenFor(model => model.ShowPkgSec, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.ShowDispatcherSec, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.DetailJSON, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.GroupDetailJSON, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.ProductDetailJSON, htmlAttributes: new { @class = "" })
            <div class="col-md-12">
                <div class="form-group col-md-8" id="divPack">
                    <div class="form-group col-md-6">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.SlipNo, htmlAttributes: new { @class = "control-label " })
                            </div>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.SlipNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @disabled = "disabled", @placeholder = "Autogenerated" } })
                                @Html.ValidationMessageFor(model => model.SlipNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.DateFormatted, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.DateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                            @Html.ValidationMessageFor(model => model.DateFormatted, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PackedBy, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.PackedBy, Model.Employee.SelectList, "--Select Employee--", new { @class = "form-control BlockEnter", @Style = "width:100%" })
                            @Html.ValidationMessageFor(model => model.PackedBy, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.SalesOrderID, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">

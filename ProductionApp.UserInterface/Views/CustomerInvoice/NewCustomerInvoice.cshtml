@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.CustomerInvoiceViewModel
@{
    if (Model.IsUpdate)
    {
        ViewBag.Title = "Edit Customer Invoice";
    }
    else
    {
        ViewBag.Title = "New Customer Invoice";
    }
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableButtons")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatableSelect")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/Select2")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/Selectmin")
}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-cogs"></i> Customer Invoice</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<!-- Main content -->
 <section class="content">
    <div class="row" id="OverlayHeader">
        <div class="col-md-6">
            <span id="lblCustomerInvoiceNo" class="SCHeader"></span>
        </div>
        <div class="col-md-6" id="divbuttonPatchAddCustomerInvoice" style="min-height:25px;">
            @{
                var data = new { actionType = "Add" };
                @Html.Action("ChangeButtonStyle", "CustomerInvoice", data);
            }
        </div>
    </div>
    <div class="row tableContainer">
        <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General</div>
        @using (Ajax.BeginForm("InsertUpdateCustomerInvoice", "CustomerInvoice", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccessCustomerInvoice", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "CustomerInvoiceForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID, htmlAttributes: new { @class = "", @value = Guid.Empty })
            @Html.HiddenFor(model => model.IsUpdate, htmlAttributes: new { @class = "" })
            @Html.HiddenFor(model => model.hdnFileID, htmlAttributes: new { @class = "", @id = "hdnFileDupID", @value = Guid.Empty })
            <div class="col-md-12">
                <div class="form-group col-md-8">
                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.InvoiceNo, htmlAttributes: new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.InvoiceNo, new { htmlAttributes = new { @class = "form-control HeaderBox", @disabled = "disabled", @placeholder = "Autogenerated" } })
                            @Html.ValidationMessageFor(model => model.InvoiceNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   
                    <div class="col-md-12"></div>
                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.InvoiceDateFormatted, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.InvoiceDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                            @Html.ValidationMessageFor(model => model.InvoiceDateFormatted, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.CustomerID, htmlAttributes: new { @class = "control-label lblrequired " })
                        </div>
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.CustomerID, Model.Customer.SelectList, "--Select Customer--", new { @class = "form-control BlockEnter", @style = "width:100%" })
                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                  
                    <div class="col-md-12"></div>
                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PaymentTermCode, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12">
                            @Html.Action("PaymentTermDropdown", "PaymentTerm")
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.PaymentDueDateFormatted, htmlAttributes: new { @class = "control-label lblrequired" })
                        </div>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.PaymentDueDateFormatted, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                            @Html.ValidationMessageFor(model => model.PaymentDueDateFormatted, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-12"></div>
                    <div class="form-group col-md-12">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.BillingAddress, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-12"  style = "width:95% !important">
                            @Html.TextAreaFor(model => model.BillingAddress, new { @class = "form-control HeaderBox textareafix", rows = "3" })
                        </div>
                    </div>
                   

                </div>
                <div class="form-group col-md-4">
                    <div class="col-md-12">
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                    </div>
                    <div class="form-group col-md-12 box-header figuresummary rounded">
                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Invoice Amount</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblStatusInvoiceAmount">-</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Payment Received</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblPaymentReceived">-</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="rightAmtCaption">Balance</div>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="lblStatusDisplay" id="lblBalance">-</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group" hidden="hidden">
                <div class="col-md-offset-2 col-md-10">
                     @Html.HiddenFor(model => model.DetailJSON, htmlAttributes: new { @class = "" })
                    <input id="btnSave" type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>


            <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> Item Details</div>
            <div class="col-md-12" style="padding-bottom:3px">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-openid" onclick="ShowCustomerInvoiceDetailsModal()" id="btnAddCustomerInvoiceItems" style="color:white;font-weight:bold;float:right"><i class="glyphicon glyphicon-plus"></i> Load Item from Packing Slip </a>
                </div>
            </div>
            <div class="col-md-12">
                <table id="tblCustomerInvoiceDetail" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" style="width:100%">
                    <thead>
                        <tr class="text-center TableHead"> 
                            <th>ID</th>
                            <th>Sl. No</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Weight</th>
                            <th>Rate</th>
                            <th>Trade Discount</th>
                            <th>Taxable Amount</th>
                            <th>GST %</th>
                            <th>Total</th>
                            <th>...</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-md-12">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <table class="table table-striped table-bordered table-hover customgrd dataTable no-footer">
                        <tbody>
                            <tr>
                                <td style="text-align: right;width:50%">
                                    @Html.LabelFor(model => model.TotalTaxableAmount, htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td style="text-align: right;width:50%">
                                    @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblTotalTaxableAmount" })
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right">
                                    @Html.LabelFor(model => model.TotalTaxAmount, htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td style="text-align: right">
                                    @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblTotalTaxAmount" })
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right">
                                    @Html.LabelFor(model => model.Discount, htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td style="text-align: right">
                                    @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control HeaderBox Amount pull-right", onkeypress = "return isNumber(event)"} })
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: right">
                                    @Html.LabelFor(model => model.InvoiceAmount, htmlAttributes: new { @class = "control-label" })
                                </td>
                                <td style="text-align: right;">
                                    @Html.Label("0", htmlAttributes: new { @class = "control-label ", @id = "lblInvoiceAmount",style= "font-weight: bold !important;" })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
           

            <div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General Notes</div>
            <div class="col-md-12">
                <div class="form-group col-md-8">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.GeneralNotes, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.GeneralNotes, new { @class = "form-control HeaderBox textareafix", rows = "8" })
                    </div>
                </div>
            </div>

            <div>
                @Html.Partial("_Fileupload")
            </div>
            <div class="col-md-12  ">&nbsp;</div>
            <div class="col-md-12  ">&nbsp;</div>
        }
    </div>
</section>

<!-- Modal Edit <!-- Modal Edit Sales Order Details Modal -->
<div class="modal fade bs-example-modal-lg" id="CustomerInvoiceDetailsModal" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="min-width:900px !important;">
        <div class="modal-content" style="margin-top:4%;">
            <div class="modal-header" style="background-image: url('');background-repeat: repeat;height: 40px;padding: 3px;border-bottom:2px solid rgb(91, 192, 222)!important;">
                <div class="container-fluid" style="padding-right: 0px;">
                    <div class="col-md-9">
                        <div class="col-md-12 modelIcon">
                            <h3 class="modal-title" id="modelContextLabel">Add Customer Invoice Details</h3>
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-right: 4px;">
                        <a class="close" data-dismiss="modal" aria-label="Close"><i style="font-size: 33px;" class="fa fa-times-circle" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <ul class="nav nav-pills">
                        <li class="active">
                            <a id="tabList" onclick="ViewPackingSlipList()" href="#List" data-toggle="tab"> <span class="fa fa-list">&nbsp;&nbsp;</span>PACKING SLIP LIST</a>
                        </li>
                        <li>
                            <a id="tabDetail" onclick="ViewPackingSlipListDetails()" href="#Detail" data-toggle="tab"><span class="fa fa-file-o">&nbsp;&nbsp;</span>SELECTED PACKING SLIP DETAILS</a>
                        </li>
                    </ul>
                    <div class="tab-content clearfix">
                        <div class="tab-pane fade in active" id="List">
                            <table id="tblPackingSlipList" class="table table-striped table-bordered table-hover" cellspacing="0"  style="width:100%">
                                <thead>
                                    <tr class="text-center">
                                        <th></th>
                                        <th>Slip No.</th>
                                        <th>Reference Customer</th>
                                        <th>Slip Date</th>
                                        <th>Sales Person</th>
                                        <th>Order No.</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="Detail">
                            <table id="tblPackingSlipListDetail" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr class="text-center TableHead">
                                        <th></th>
                                        <th>Product</th>
                                        <th>Slip No.</th>
                                        <th>Quantity</th>
                                        <th>Weight</th>
                                        <th>Rate</th>
                                        <th>Discount</th>
                                        <th>GST %</th>
                                    </tr>
                                </thead>
                            </table>
                            <div>
                                <b>**</b>
                                Packing Slip items in 'Customer Invoice' are avoided and the rest will be listed here.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                    </div>
                </div>
            </div> 
            <div class="modal-footer" style="height: 50px;padding: 7px;">
                <a id="btnBackward" class="btn btn-primary" onclick="ViewPackingSlipList(1)"><i class="glyphicon glyphicon-step-backward">Back </i></a>
                <a id="btnForward" class="btn btn-primary" onclick="ViewPackingSlipListDetails(1)">Next <i class="glyphicon glyphicon-step-forward"></i></a>
                <a id="btnAdd" class="btn btn-primary" onclick="AddCustomerInvoiceDetails()"><i class="glyphicon glyphicon-floppy-disk"></i> Add</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit <!-- Modal Edit customer invocie  Details Modal -->



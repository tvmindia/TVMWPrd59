@model ProductionApp.UserInterface.Models.BOMComponentLineViewModel

@{ 
    List<SelectListItem> StageList = new List<SelectListItem>();
    for(int i = 0; i < Model.BOMComponentLineStageList.Count; i++)
    {
        StageList.Add(new SelectListItem
        { Text = Model.BOMComponentLineStageList[i].Stage.Description, Value = Model.BOMComponentLineStageList[i].StageID.ToString() });
    }
}
@Html.DropDownListFor(model => model.BOMComponentLineStageDetail.StageID, StageList, "--Select Stage--", new { @class = "form-control", @id = "StageID"})

<script>
    $(document).ready(function () {
        $('#StageID').change(function () {
            $('#BOMComponentLineStageDetail_StageID').val($(this).val());
        });
    })
</script>
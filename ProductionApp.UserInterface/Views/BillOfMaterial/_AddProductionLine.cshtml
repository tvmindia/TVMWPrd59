@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.BillOfMaterialViewModel

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/UserCSS/BillOfMaterial")
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/css/jquery-ui")
}

<div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General</div>
<div class="form-group col-md-4">
    <div class="col-md-12">
        <label class="control-label lblrequired">Product</label>
    </div>
    <div class="col-md-12">
        @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control HeaderBox ", @disabled = "disabled" } })
    </div>
</div>
<div class="form-group col-md-4">
    <div class="col-md-12">
        @Html.LabelFor(model => model.BOMComponentLine.ComponentID, htmlAttributes: new { @class = "control-label lblrequired" })
        @{
            List<SelectListItem> componentList = new List<SelectListItem>();
            for (int i = 0; i < Model.BillOfMaterialDetailList.Count; i++)
            {
                componentList.Add(new SelectListItem
                { Text = Model.BillOfMaterialDetailList[i].Product.Name, Value = Model.BillOfMaterialDetailList[i].ComponentID.ToString() });
            }
        }
    </div>
    <div class="col-md-12">
        @Html.DropDownListFor(model => model.BOMComponentLine.ComponentID, componentList, "--Select Component--", new { @class = "form-control BlockEnter", style = "padding:4px 12px;" })
        @Html.ValidationMessageFor(model => model.BOMComponentLine.ComponentID, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-md-12"></div>
<div class="form-group col-md-4">
    <div class="col-md-12">
        @Html.LabelFor(model => model.BOMComponentLine.LineName, htmlAttributes: new { @class = "control-label lblrequired" })
    </div>
    <div class="col-md-12">
        @Html.EditorFor(model => model.BOMComponentLine.LineName, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
        @Html.ValidationMessageFor(model => model.BOMComponentLine.LineName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="col-md-12"></div>
<div class="col-md-6" style="border-right:1px solid silver">

    <div class="col-md-12 headSeperator"><i class="fa fa-th ig-green" aria-hidden="true"></i> Stages</div>
    <div class="col-md-12" style="margin-bottom:3px;">
        <div class="col-md-5 selectable-list">
            @*Html.ListBoxFor(model => model.BOMComponentLine.StageList, Model.BOMComponentLine.StageList.Select(stage => new SelectListItem { Text = stage.Description, Value = stage.ID.ToString() }), new { Multiple = "multiple", @id = "selectable", @class="selectable"})*@ 
            <ol id = "selectable" class="selectable">
                @{
                    for (int i = 0; i < Model.BOMComponentLineStage.StageList.Count; i++)
                    {
                        <li value=@Model.BOMComponentLineStage.StageList[i].ID.ToString() class="ui-widget-content">@Model.BOMComponentLineStage.StageList[i].Description</li>
                    }
                }
            </ol>
        </div>
        <div class="col-md-2" style="position:center">
            <input type = "submit" id="btnStage" class="btn btn-default" style="margin-top:40%;margin-bottom:15%;" onclick="OnStageSelect()" value=">>" />
            <br />
            <input type = "submit" id="btnUnstage" class="btn btn-default" style="margin-top:15%;margin-bottom:15%;" onclick="OnStageDeselect()" value="<<" />
        </div>
        <div class="col-md-5 selectable-list">
            <ol id = "selected" class="selectable"style="list-style-type:decimal;"></ol>
        </div>
    </div>

    <div class="col-md-9">
        <a class="btn btn-openid" onclick="NewLine()" style="color:white;font-weight:bold;float:right;"><i class="fa fa-plus"></i> Add new line</a>@*margin-left:70px;*@
    </div>
    <div class="col-md-3">
        <a class="btn btn-openid" onclick="SaveLine()" style="color:white;font-weight:bold;float:right;">&nbsp;&nbsp;<i class="fa fa-save"></i>&nbsp;Save Line&nbsp;&nbsp;</a>@*//margin-left:20px;*@
    </div>

</div>
<div class="col-md-6">

    <div class="col-md-12" style="height:228px;margin-top:18px">
        <table id="tblBOMLineStageList" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
            <thead>
                <tr class="text-center TableHead">
                    <th>ID</th>
                    <th>Line Name</th>
                    <th>Stage IDs</th>
                    <th>Stages</th>
                    <th>...</th>
                    <th>...</th>
            </thead>
        </table>

    </div>

    <div class="col-md-5">&nbsp;</div>
    <div class="col-md-4">
        <a class="btn btn-openid" onclick="Reset()" style="color:white;font-weight:bold;float:right;"><i class="fa fa-angle-double-left"></i> Back </a>@*//margin-left:20px;*@
    </div>
    <div class="col-md-3">
        <a class="btn btn-openid" onclick="SaveAndProceed()" style="color:white;font-weight:bold;float:right;">Save & Proceed <i class="fa fa-angle-double-right"></i> </a>@*//margin-left:20px;*@
    </div>
</div>


<script>
            $(document).ready(function () {
                $.validator.unobtrusive.parse("#FormProduct");
                $('#txtProductName').val($('#Product_Name').val());
                $('#BOMComponentLine_ComponentID').change(function () {
                    $('#BOMComponentLine_LineName').val("Line For " + $('#BOMComponentLine_ComponentID option:selected').text());
                });

                $("#selectable").selectable();
                $("#selected").selectable();
                LoadLineStageTable();
            });
</script>
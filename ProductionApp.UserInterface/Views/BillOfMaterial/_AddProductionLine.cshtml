@using ProductionApp.UserInterface.App_Start
@model ProductionApp.UserInterface.Models.BillOfMaterialViewModel

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/UserCSS/BillOfMaterial")
}

<div class="col-md-12 headSeperator"><i class="fa fa-th ig-aqua" aria-hidden="true"></i> General</div>
<div class="col-md-12">
    <div class="form-group col-md-4">
        <div class="col-md-12">
            <label class = "control-label lblrequired">Product</label>
        </div>
        <div class="col-md-12">
            @Html.HiddenFor(model=>model.Product.Name)
            <input type = "text" id="txtProductName" class = "form-control HeaderBox ", disabled = "disabled" />
        </div>
    </div>
    <div class="form-group col-md-4">
        <div class="col-md-12">
            @Html.LabelFor(model => model.BOMComponentLine.ComponentID, htmlAttributes: new { @class = "control-label lblrequired" })
            @{
                List<SelectListItem> componentList = new List<SelectListItem>();
    componentList.Add(new SelectListItem
                { Text = "All", Value = "00000000-0000-0000-0000-000000000000" });
                componentList.Add(new SelectListItem
                { Text = "Serving Pot", Value = "c03440ed-81a7-4158-8be7-aae8a48562ac" });
            }
        </div>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.BOMComponentLine.ComponentID, componentList, new { @class = "form-control BlockEnter", style = "padding:4px 12px;" })
            @Html.ValidationMessageFor(model => model.BOMComponentLine.ComponentID, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="form-group col-md-4">
        <div class="col-md-12">
            @Html.LabelFor(model => model.BOMComponentLine.LineName, htmlAttributes: new { @class = "control-label lblrequired" })
        </div>
        <div class="col-md-12">
            @Html.EditorFor(model => model.BOMComponentLine.LineName, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
            @Html.ValidationMessageFor(model => model.BOMComponentLine.LineName, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6" style="border-right:1px solid silver">

        <div class="col-md-12 headSeperator"><i class="fa fa-th ig-green" aria-hidden="true"></i> Stages</div>
        <div class="col-md-12" style="">
            <div class="col-md-5 selectable-list">
                <ol id = "selectable" class="selectable">
                    <li class="ui-widget-content">Pressing</li>
                    <li class="ui-widget-content">Trimming</li>
                    <li class="ui-widget-content">Neck setting</li>
                    <li class="ui-widget-content">Beading</li>
                    <li class="ui-widget-content">Washing</li>
                    <li class="ui-widget-content">Polishing</li>
                </ol>
            </div>
            <div class="col-md-2" style="position:center">
                <input type = "submit" id="btnStage" class="btn btn-default" style="margin-top:30%;margin-bottom:15%;" onclick="OnStageSelect()" value=">>" />
                <br />
                <input type = "submit" id="btnUnstage" class="btn btn-default" style="margin-top:15%;margin-bottom:15%;" onclick="OnStageDeselect()" value="<<" />
            </div>
            <div class="col-md-5 selectable-list">
                <ol id = "selected" class="selectable"></ol>
            </div>
        </div>

        <div class="col-md-6"></div>
        <div class="col-md-4">
            <a class="btn btn-openid" onclick="LoadComponents()" style="color:white;font-weight:bold;float:right;"><i class="fa fa-plus"></i> Add new line</a>@*margin-left:70px;*@
        </div>
        <div class="col-md-2">
            <a class="btn btn-openid" onclick="AddComponent()" style="color:white;font-weight:bold;float:right;">&nbsp;&nbsp;<i class="fa fa-save"></i> Save&nbsp;&nbsp;</a>@*//margin-left:20px;*@
        </div>

    </div>
    <div class="col-md-6">

        <div class="col-md-12" style="height:230px;margin-top:18px">
            <table id="tblBOMComponentDetail" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center TableHead">
                        <th>ID</th>
                        <th>Stage IDs</th>
                        <th>Line Name</th>
                        <th>Stages</th>
                        <th>...</th>
                        <th>...</th>
                </thead>
            </table>

        </div>

    </div>
    <div class="col-md-10">&nbsp;</div>
    <div class="col-md-2">
        <a class="btn btn-openid" onclick="SaveAndProceed()" style="color:white;font-weight:bold;float:right;">Save & Proceed <i class="fa fa-angle-double-right"></i> </a>@*//margin-left:20px;*@
    </div>
</div>

<script>
            $(document).ready(function () {
                $.validator.unobtrusive.parse("#FormProduct");
                $('#txtProductName').val($('#Product_Name').val());
                $('#BOMComponentLine_LineName').val("Line For " + $('#Product_Name').val());
            });

</script>
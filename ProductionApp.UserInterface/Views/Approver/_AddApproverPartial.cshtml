            </div>
            <div class="col-md-12">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control",@min="1",@max="5" } })
                    @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
